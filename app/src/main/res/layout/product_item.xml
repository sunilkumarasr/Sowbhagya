<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:padding="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_8sdp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_product_card"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="match_parent"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/_75sdp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_product"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_75sdp"
                android:layout_gravity="center"
                android:src="@drawable/img_app_logo"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/wishListIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/heart__0_"
                android:visibility="gone"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_product"
            style="@style/gotham_medium_11ssp_111111"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:ellipsize="end"
            android:gravity="start"
            android:singleLine="true"
            android:padding="@dimen/_1sdp"
            android:text="****"
            android:textSize="@dimen/_12sdp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/addbtnLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_1sdp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/offer_txt"
                    style="@style/gotham_medium_11ssp_111111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="****"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/price_txt"
                    style="@style/gotham_medium_11ssp_111111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:text="****"
                    android:textColor="@color/color_2F3031"
                    android:textSize="@dimen/_10sdp"/>
            </LinearLayout>




            <androidx.appcompat.widget.AppCompatButton
                android:visibility="gone"
                android:id="@+id/addBtn"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_weight="1"
                android:background="@drawable/corner_button_add"
                android:text="Add"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:textAllCaps="false"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/addtocartbtnLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/minus_txt"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:src="@drawable/minus" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/qty"
                style="@style/gotham_medium_11ssp_111111"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/plus"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:background="@drawable/plus" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addtocartBT"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_28sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="0.5"
                android:background="@drawable/rounded_button_add"
                android:padding="@dimen/_6sdp"
                android:text="ADD To Cart"
                android:visibility="gone"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="normal" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_primary"
            android:padding="@dimen/_3sdp"
            android:text="View Details"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>