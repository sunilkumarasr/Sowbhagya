<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="0.5"
                android:fontFamily="@font/lato_bold"
                android:paddingLeft="@dimen/_10sdp"
                android:text="Orders "
                android:textColor="@color/color_primary"
                android:textSize="@dimen/_11sdp"
                android:visibility="gone" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/checkout_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_6sdp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <ProgressBar
                android:id="@+id/progressBarcheckout"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_gravity="center"
                android:visibility="gone" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                android:layout_margin="10dp"
                android:layout_marginTop="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_10sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/adressdata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/lato_medium_16ssp_2F3031"
                    android:layout_weight="0.5"
                    android:drawableLeft="@drawable/baseline_location_on_24"
                    android:drawablePadding="@dimen/_5sdp"
                    android:fontFamily="@font/lato_bold"
                    android:padding="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="Choose Address"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:id="@+id/changeAddress"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardBackgroundColor="@color/brown"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    app:cardElevation="3dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="0.8"
                        style="@style/gotham_medium_11ssp_111111"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="Date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />


                    <TextView
                        android:id="@+id/currentdate_tx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_weight="0.9"
                        android:drawablePadding="@dimen/_2sdp"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_30sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp">

                    </TextView>

                </LinearLayout>

                <View
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_gravity="center"
                    android:background="@color/grey"></View>


            </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_weight="0.5"
                android:fontFamily="@font/lato_bold"
                android:paddingLeft="@dimen/_10sdp"

                android:text="Receipt"
                android:textColor="@color/color_primary"
                android:textSize="@dimen/_11sdp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/lato_regular"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="Products total"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"></TextView>


                <TextView
                    android:id="@+id/totalpricee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_weight="0.9"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/lato_regular"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="GST"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"></TextView>


                <TextView
                    android:id="@+id/totalGST"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_weight="0.9"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/lato_regular"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="Tax"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"></TextView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_weight="0.9"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:text=" 10.00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/lato_regular"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="Discount"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"></TextView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_weight="0.9"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:text=" 10.00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/lato_bold"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="Topup Added"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_weight="0.9"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:text=" 10.00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp">

                </TextView>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/doted" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/lato_bold"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="Total Amount"
                    android:textColor="@color/color_primary"
                    android:textSize="@dimen/_11sdp" />


                <TextView
                    android:id="@+id/totalprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_weight="0.9"
                    android:gravity="center"
                    android:text=" "
                    android:textColor="@color/color_primary"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:buttonTint="@color/black"
                    android:checked="true"
                    android:fontFamily="@font/lato_bold"
                    android:text="Cash On Delivery"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_11sdp" />


            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/paynow"
                android:layout_width="@dimen/_195sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/rounded_button_submit"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:text="Pay Now"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />


        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>