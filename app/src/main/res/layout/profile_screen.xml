<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/rounded_button_otp"
                android:fontFamily="@font/lato_regular"
                android:gravity="left"
                android:paddingLeft="@dimen/_10sdp"
                android:text="Profile"
                android:textColor="@color/color_2F3031"
                android:textSize="@dimen/_18sdp"
                android:visibility="gone" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profle"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/baseline_account_circle_24" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/usernmae"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/lato_regular"
                android:text="Sowbhagya"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone">

            </androidx.appcompat.widget.AppCompatTextView>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_edit_text"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                >
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/username_ET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_button_otp"
                    android:fontFamily="@font/lato_regular"
                    android:hint="Full Name"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@color/color_2F3031"
                    android:textColorHint="@color/color_2F3031"
                    android:textSize="@dimen/_11sdp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_edit_text"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                android:visibility="gone"
                >
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/lastname_ET"
                android:layout_width="@dimen/_260sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/lato_regular"
                android:hint="Last Name"

                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/color_2F3031"
                android:textSize="@dimen/_11sdp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_edit_text"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/email_ET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:enabled="false"
                    android:fontFamily="@font/lato_regular"
                    android:hint="Email"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress|none"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@color/color_2F3031"
                    android:textColorHint="@color/color_2F3031"
                    android:textSize="@dimen/_11sdp" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_edit_text"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                >

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/mobile_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rounded_button_otp"
                android:fontFamily="@font/lato_regular"
                android:hint="Mobile"
                android:maxLength="10"
                android:inputType="phone"
                android:maxLines="1"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="@color/color_2F3031"
                android:textColorHint="@color/color_2F3031"
                android:textSize="@dimen/_11sdp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_edit_text"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tieAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:enabled="false"
                    android:fontFamily="@font/lato_regular"
                    android:hint="Address"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine|none"
                    android:maxLines="4"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@color/color_2F3031"
                    android:textColorHint="@color/color_2F3031"
                    android:textSize="@dimen/_11sdp" />
            </com.google.android.material.textfield.TextInputLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/update_BT"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/rounded_button_submit"
                android:fontFamily="@font/lato_regular"
                android:textAllCaps="false"
                android:text="Update"
                android:textColor="@color/white" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>